<body>
    <div class="container">
        <h1>Unit Converter</h1>

        <!-- Celsius to Fahrenheit -->
        <div class="converter">
            <label for="celsius">Celsius to Fahrenheit:</label>
            <input type="number" id="celsius" placeholder="Enter Celsius">
            <button onclick="convertCtoF()">Convert</button>
            <div class="result" id="cToFResult"></div>
        </div>

        <!-- Fahrenheit to Celsius -->
        <div class="converter">
            <label for="fahrenheit">Fahrenheit to Celsius:</label>
            <input type="number" id="fahrenheit" placeholder="Enter Fahrenheit">
            <button onclick="convertFtoC()">Convert</button>
            <div class="result" id="fToCResult"></div>
        </div>

        <!-- Meters to Feet -->
        <div class="converter">
            <label for="meters">Meters to Feet:</label>
            <input type="number" id="meters" placeholder="Enter Meters">
            <button onclick="convertMtoF()">Convert</button>
            <div class="result" id="mToFResult"></div>
        </div>

        <!-- Feet to Meters -->
        <div class="converter">
            <label for="feet">Feet to Meters:</label>
            <input type="number" id="feet" placeholder="Enter Feet">
            <button onclick="convertFtoM()">Convert</button>
            <div class="result" id="fToMResult"></div>
        </div>
    </div>

    <script>
        function convertCtoF() {
            let c = parseFloat(document.getElementById("celsius").value);
            if (isNaN(c)) {
                document.getElementById("cToFResult").innerText = "Please enter a valid number.";
                return;
            }
            let f = (c * 9/5) + 32;
            document.getElementById("cToFResult").innerText = c + "째C = " + f.toFixed(2) + "째F";
        }

        function convertFtoC() {
            let f = parseFloat(document.getElementById("fahrenheit").value);
            if (isNaN(f)) {
                document.getElementById("fToCResult").innerText = "Please enter a valid number.";
                return;
            }
            let c = (f - 32) * 5/9;
            document.getElementById("fToCResult").innerText = f + "째F = " + c.toFixed(2) + "째C";
        }

        function convertMtoF() {
            let m = parseFloat(document.getElementById("meters").value);
            if (isNaN(m)) {
                document.getElementById("mToFResult").innerText = "Please enter a valid number.";
                return;
            }
            let ft = m * 3.28084;
            document.getElementById("mToFResult").innerText = m + " meters = " + ft.toFixed(2) + " feet";
        }

        function convertFtoM() {
            let ft = parseFloat(document.getElementById("feet").value);
            if (isNaN(ft)) {
                document.getElementById("fToMResult").innerText = "Please enter a valid number.";
                return;
            }
            let m = ft / 3.28084;
            document.getElementById("fToMResult").innerText = ft + " feet = " + m.toFixed(2) + " meters";
        }
    </script>
</body>
